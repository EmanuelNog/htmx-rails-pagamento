<form hx-post="/pessoa" 
      hx-target="#pessoas-list"
      hx-swap="innerHTML"
      hx-indicator="#loading">

  <div id="loading" class="htmx-indicator">
    <div class="spinner">Cadastrando pessoa...</div>
  </div>

  <div class="form-group">
    <label for="pessoa_nome">Nome</label>
    <input type="text" 
           name="pessoa[nome]" 
           id="pessoa_nome" 
           class="form-input"
           required>
  </div>

  <div class="form-group">
    <label for="pessoa_cpf">CPF</label>
    <input type="text" 
           name="pessoa[cpf]" 
           id="pessoa_cpf" 
           class="form-input"
           pattern="\d{3}\.\d{3}\.\d{3}-\d{2}"
           placeholder="000.000.000-00"
           required>
  </div>

  <div class="form-group">
    <label for="pessoa_dataNascimento">Data de Nascimento</label>
    <input type="date" 
           name="pessoa[dataNascimento]" 
           id="pessoa_dataNascimento" 
           class="form-input"
           required>
  </div>

  <button type="submit" class="btn btn-primary">
    Cadastrar Pessoa
  </button>
</form> 